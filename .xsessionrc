#!/bin/sh

. $HOME/.profile

xrandr --newmode "3840x2160_26.00"  290.25  3840 4064 4464 5088  2160 2163 2168 2195 -hsync +vsync
xrandr --addmode HDMI-1 "3840x2160_26.00"
xrandr --output HDMI-1 --mode "3840x2160_26.00" --right-of eDP-1
setxkbmap -option ctrl:nocaps

xrdb -merge $HOME/.Xresources

echo "Starting personal X scripts"
for i in $HOME/bin/*_startx.sh; do
	echo "Running $i"; $i
done

export XSECURELOCK_PASSWORD_PROMPT='kaomoji'
xset s 300 5
xss-lock -n /usr/local/libexec/xsecurelock/dimmer -- xsecurelock &
