#!/bin/bash

# this script is being called from inside
# a shell that emacs has spawned.
if [[ -n "${EMACS_SERVER}" ]]; then
    emacsclient -s "${EMACS_SERVER}" -e '(setq server-window (my-next-editable-window))'
    emacsclient -s "${EMACS_SERVER}" $@
    emacsclient -s "${EMACS_SERVER}" -e '(setq server-window nil)' >/dev/null
else
    emacsclient -t $@
fi
